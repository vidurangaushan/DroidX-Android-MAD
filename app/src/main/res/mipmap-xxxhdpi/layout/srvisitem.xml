<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sername"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seremail"
            android:text="Email"
            android:padding="10dp"
            android:layout_below="@+id/sername"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/sertel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seremail"
            android:padding="10dp"
            android:text="Telephone"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sercity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sertel"
            android:padding="10dp"
            android:text="City"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sercategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sercity"
            android:padding="10dp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/sercategory">

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textAllCaps="false"
                android:backgroundTint="@color/purple_200"
                android:layout_marginRight="5dp"
                android:id="@+id/serupdate"/>

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textAllCaps="false"
                android:backgroundTint="@color/purple_200"
                android:layout_marginLeft="5dp"
                android:id="@+id/serdelete"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>